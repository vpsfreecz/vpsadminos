# This file is generated by osctld from vpsAdminOS. Do not edit this file, all
# changes will be lost. To stop osctld from manipulating this file, run
#
#   chmod u-w /etc/netctl/<%= netif.name %>

Description="osctl network configuration for <%= netif.name %>"
Interface=<%= netif.name %>
BindToInterfaces=()
Connection=ethernet
ForceConnect=yes
<% if netif.dhcp -%>
IP=dhcp
<% else -%>
<% netif.active_ip_versions.each do |v| -%>
<% all_ips = netif.ips(v) -%>
<% if v == 4 -%>
IP=static
Address=( <%= all_ips.map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes=( <% if netif.has_gateway?(v) %>"default via <%= netif.gateway(v) %> dev <%= netif.name %>"<% end %> )
<% elsif v == 6 -%>
IP6=static
Address6=( <%= all_ips.map { |addr| "\"#{addr.to_string}\"" }.join(' ') %> )
Routes6=( <% if netif.has_gateway?(v) %>"default via <%= netif.gateway(v) %> dev <%= netif.name %>"<% end %> )
<% end %>
<% end -%>
<% end -%>
