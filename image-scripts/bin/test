#!/usr/bin/env bash
# This is internal builder, do not use this directly!
# Use osctl-image from vpsAdminOS to build the images.

BASEDIR=$(realpath `dirname ${BASH_SOURCE[0]}`/..)

function usage {
	echo "Usage:"
	echo "  $0 image [command arguments...]"
}

function image_usage {
	echo "Usage:"
	echo "  $0 image run <test-name> <ctid>"
}

function do_image {
	if [ $# -lt 1 ] ; then
		image_usage
		exit 1
	fi

	local action="$1"

	case "$action" in
		run)
			shift 1
			test_image $@
			;;
		*)
			image_usage
			exit 1
			;;
	esac
}

function test_image {
	if [ $# != 2 ] ; then
		image_usage
		exit 1
	fi

	TEST="$1"
	CTID="$2"

	INCLUDE="$BASEDIR/include"

	. "$BASEDIR/include/common.sh"
	. "$BASEDIR/tests/$TEST.sh"
}

function main {
	if [ $# -lt 1 ] ; then
		usage
		exit 1
	fi

	local command="$1"
	shift 1

	case "$command" in
		image)
			do_image $@ ;;
		*)
			usage
			exit 1
			;;
	esac
}

main $@
